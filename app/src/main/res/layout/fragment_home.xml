<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    tools:background="@color/lighter_background">

    <TextView
        android:id="@+id/iss_home_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="46dp"
        android:layout_marginHorizontal="12dp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="@android:color/primary_text_dark"
        tools:text="General information about the ISS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iss_home_subtitle_purpose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="26dp"
        android:gravity="start"
        android:textSize="22sp"
        android:textColor="@android:color/primary_text_dark"
        tools:text="Purpose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iss_home_title" />

    <TextView
        android:id="@+id/iss_home_content_purpose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="26dp"
        android:gravity="start"
        android:textSize="18sp"
        android:textColor="@android:color/secondary_text_dark"
        tools:text="Long text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iss_home_subtitle_purpose" />

    <TextView
        android:id="@+id/iss_home_subtitle_Infos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="26dp"
        android:gravity="start"
        android:textSize="22sp"
        android:textColor="@android:color/primary_text_dark"
        tools:text="Some useful informations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iss_home_content_purpose" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/iss_home_recyclerViewList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="28dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iss_home_subtitle_Infos" />


</androidx.constraintlayout.widget.ConstraintLayout>